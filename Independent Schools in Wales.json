{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Map of independent schools in Wales",
  "title": "Independent Schools in Wales",
  "width": 300,
  "height": 400,
  "layer": [
    {
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/LAD_WLS_2025_05.topojson",
    "format": {"type": "topojson", "feature": "object_name"}
  },
  "mark": {
    "type": "geoshape",
    "fill": "lightseagreen",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "projection": {
    "type": "mercator"
  }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/37099/37099.github.io/refs/heads/main/Independent%20Schools%20Wales.csv"
      },
      "projection": {"type": "mercator"},
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "color": {"value": "#D36800"},
        "tooltip": [
          {"field": "name"}
        ]
      }
    }
  ]
}